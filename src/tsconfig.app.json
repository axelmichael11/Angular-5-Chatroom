{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types":[
      "hammerjs"
    ],
    "noUnusedParameters": false,
  "noUnusedLocals": false,
  "allowUnreachableCode": false,
  "pretty": true,

    "lib": [
      "es2016",
      "dom"
    ]
  }
}
